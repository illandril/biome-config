{
  "name": "@illandril/biome-config",
  "version": "0.0.1",
  "description": "Biome rules used by illandril for his projects",
  "type": "module",
  "exports": {
    ".": "./biome.base.json",
    "./react": "./biome.react.json",
    "./foundryvtt": "./biome.foundryvtt.json"
  },
  "files": ["biome.base.json", "biome.react.json", "biome.foundryvtt.json", "LICENSE"],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "npm run lint -- --apply",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run test && npm run lint",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illandril/biome-config.git"
  },
  "keywords": ["biome", "biomejs", "biome config", "format", "lint"],
  "author": "Joe Spandrusyszyn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/illandril/biome-config/issues"
  },
  "homepage": "https://github.com/illandril/biome-config",
  "dependencies": {
    "@biomejs/biome": "1.7.2"
  },
  "devDependencies": {
    "@biomejs/backend-jsonrpc": "^1.7.2",
    "@biomejs/js-api": "^0.5.0",
    "@biomejs/wasm-bundler": "1.7.2",
    "@biomejs/wasm-nodejs": "1.7.2",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "husky": "^9.0.11",
    "react": "^18.3.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@biomejs/wasm-bundler": "1.7.2",
    "@biomejs/wasm-nodejs": "1.7.2"
  },
  "peerDependenciesMeta": {
    "@biomejs/wasm-bundler": {
      "optional": true
    },
    "@biomejs/wasm-nodejs": {
      "optional": true
    }
  }
}
