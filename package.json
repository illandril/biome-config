{
  "name": "@illandril/biome-config",
  "version": "1.4.0",
  "description": "Biome rules used by illandril for his projects",
  "type": "module",
  "exports": {
    ".": "./biome.base.jsonc",
    "./react": "./biome.react.jsonc"
  },
  "files": [
    "biome.base.jsonc",
    "biome.react.jsonc",
    "LICENSE"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "npm run lint -- --write",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run test && npm run type-check && npm run lint",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illandril/biome-config.git"
  },
  "keywords": [
    "biome",
    "biomejs",
    "biome config",
    "format",
    "lint"
  ],
  "author": "Joe Spandrusyszyn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/illandril/biome-config/issues"
  },
  "homepage": "https://github.com/illandril/biome-config",
  "dependencies": {
    "@biomejs/biome": "1.8.3"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "husky": "^9.1.1",
    "react": "^18.3.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  }
}
