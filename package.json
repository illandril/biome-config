{
  "name": "@illandril/biome-config",
  "version": "1.2.0",
  "description": "Biome rules used by illandril for his projects",
  "type": "module",
  "exports": {
    ".": "./biome.base.jsonc",
    "./react": "./biome.react.jsonc"
  },
  "files": [
    "biome.base.jsonc",
    "biome.react.jsonc",
    "LICENSE"
  ],
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "npm run lint -- --apply",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "npm run test && npm run type-check && npm run lint",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illandril/biome-config.git"
  },
  "keywords": [
    "biome",
    "biomejs",
    "biome config",
    "format",
    "lint"
  ],
  "author": "Joe Spandrusyszyn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/illandril/biome-config/issues"
  },
  "homepage": "https://github.com/illandril/biome-config",
  "dependencies": {
    "@biomejs/biome": "1.8.3"
  },
  "devDependencies": {
    "@biomejs/backend-jsonrpc": "^1.8.3",
    "@biomejs/js-api": "^0.6.2",
    "@biomejs/wasm-bundler": "1.8.3",
    "@biomejs/wasm-nodejs": "1.8.3",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "husky": "^9.0.11",
    "react": "^18.3.1",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@biomejs/wasm-bundler": "1.7.2",
    "@biomejs/wasm-nodejs": "1.7.2"
  },
  "peerDependenciesMeta": {
    "@biomejs/wasm-bundler": {
      "optional": true
    },
    "@biomejs/wasm-nodejs": {
      "optional": true
    }
  }
}
